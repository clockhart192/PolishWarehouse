@model PolishWarehouse.Models.StampingPlateDestashModel[]
@if (Request.IsAuthenticated)
{
    ViewBag.Title = "Stamping Plate List";

    @Html.Partial("MessageControl")

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-private">
                    <h3>Stamping Plate Destash</h3>
                </div>
                <div class="panel-collapse" id="Polishcollapse">
                    <div class="panel-body">
                        @*<div class="row">
                            <div class="col-md-12">
                                @Html.ActionLink("Public Destash", "Public", "Destash", null, new { @class = "btn btn-default" })
                            </div>
                        </div>*@
                        <div class="row margin-top-5">
                            <div class="col-md-12 table-responsive">
                                @*<input type="text" onkeyup="SortTable('salestable',this)" />*@
                                <table class="table table-hover table-condensed datatable" id="polishtable" style="display:none;">
                                    <thead>
                                        <tr>
                                            <th>Brand</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Price</th>
                                            <th>Status</th>
                                            <th class="hidden-xs">Notes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var plate in Model)
                                        {
                                            <tr>
                                                <td>@plate.BrandName</td>
                                                <td>@Html.ActionLink(plate.Name, "DestashDetails", new { id = plate.ID })</td>
                                                <td>@plate.Notes</td>
                                                <td>@plate.AskingPrice.Value.ToString("C2")</td>
                                                <td>@plate.SaleStatus</td>
                                                <td class="hidden-xs">@plate.DestashNotes</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $("#header-main-text").text("Stamping Plate");
                });

                $(document).ready(function () {
                    $('#polishtable').dataTable({
                        "pageLength": 100,
                        "deferRender": true,
                        "stateSave": true,
                        "lengthMenu": [[10, 25, 50, 100, 150, 200, -1], [10, 25, 50, 100, 150, 200, "All"]],
                        "initComplete": function (settings, json) {
                            $("#polishtable").show();
                        }
                    });
                });
            </script>
        </div>
    </div>
}
else
{
    //TempData["Errors"] = "Please Log in.";
    Response.Redirect("~/Account/Login");
}