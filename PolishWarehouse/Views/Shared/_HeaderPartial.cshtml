
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        @if (Request.IsAuthenticated)
        {
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Polish Warehouse", "Index", "Polish", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Add", "Details", "Polish", new { id = string.Empty }, null)</li>*@
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Polish <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List", "", "Polish")</li>
                            <li>@Html.ActionLink(" Public List", "Public", "Polish")</li>
                            <li>@Html.ActionLink("Add", "Details", "Polish", new { id = string.Empty }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Destash <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List", "", "Destash")</li>
                            <li>@Html.ActionLink(" Public List", "Public", "Destash")</li>
                            <li>@Html.ActionLink("Add", "Details", "Destash", new { id = string.Empty }, null)</li>
                            <li><a href="#" onclick="$('#Mark-All-Pending-As-Sold-Confirm').modal('show'); return false;">Mark Pending As Sold</a></li>
                            <li><a href="#" onclick="$('#Archive-All-Sold-Confirm').modal('show'); return false;">Archive Sold</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Incoming Orders <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List", "", "Incoming")</li>
                            <li>@Html.ActionLink("Completed", "", "Incoming", new { viewComplete = true }, null)</li>
                            <li>@Html.ActionLink("Add", "Details", "Incoming", new { id = string.Empty }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Settings <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Colors", "Colors", "Settings")</li>
                            <li>@Html.ActionLink("Brands", "Brands", "Settings")</li>
                            <li>@Html.ActionLink("Brand Categories", "BrandCategories", "Settings")</li>
                            <li>@Html.ActionLink("Polish Types", "PolishTypes", "Settings")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Utilities <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Random!", "Random", "Polish")</li>
                            <li>@Html.ActionLink("Import", "Import", "Polish")</li>
                            <li>@Html.ActionLink("New User", "Register", "Account")</li>
                            <li>@Html.ActionLink("Archive", "", "Archive")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        }
        else
        {
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Polish Warehouse", "Public", "Polish", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("List", "Public", "Polish", null, null)</li>
                    <li>@Html.ActionLink("Destash", "Public", "Destash", null, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        }
    </div>
</div>